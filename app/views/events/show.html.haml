%p#notice= notice

%p
  %b timespan:
  = @event.timespan
%p
  %b Latitude:
  = @event.latitude
%p
  %b Longitude:
  = @event.longitude
%p
  %b Address:
  = @event.address
%p
  %b Description:
  = @event.description
%p
  %b Title:
  = @event.title
%p
  %b Datetime:
  = @event.datetime

= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path

- @hoge.each do |h|
  - Instagram.location_recent_media(h.id, {min_timestamp: (@event.datetime.to_i).to_s, max_timestamp: (@event.datetime.to_i + 1000*60*60).to_s}).each do |media|
    = link_to media.link, :target => "_blank" do
      = image_tag(media.images.low_resolution.url)

